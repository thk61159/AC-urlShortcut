<div class='card mx-auto border-light' style='width: 20rem; outline: 0;'>
  <img src='https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png'
    class='card-img-top' alt='JSUT AN IMAGE' />
  <div class='card-body'>
    <form action="/" method="POST" class="urlForm">
      <div class='form-group d-flex flex-column mx-auto'>
        <label for='originalUrl' style='display: block;' class='mx-auto'>URL Shortcut Generator</label>
        <input type='url' class='form-control mt-2 urlInput {{wrongUrl}}' id='originalUrl' name="originalUrl"
          aria-describedby='emailHelp' placeholder='請輸入網址...' value="{{originalUrl}}" />
        <button type='submit' class='btn btn-primary mt-3' data-id={{originalUrl}}>Submit</button>
      </div>
    </form>
    <div class='mt-4'>
      <div class='form-group d-flex flex-column mx-auto'>
        <label for='shortcutUrl' style='display: block;' class='mx-auto'>URL Shortcut It's Here!</label>
        <a href="{{shotrcutUrl}}" target="_blank"><input type='text' class='form-control mt-2' id='shortcutUrl'
            aria-describedby='emailHelp' placeholder="{{#if wrongUrl}}無效網址{{/if}}" value="{{shotrcutUrl}}"
            disabled /></a>
        <button class='btn btn-primary mt-3 shortURL' data-id={{shotrcutUrl}}>Copy</button>
      </div>
    </div>
  </div>
</div>